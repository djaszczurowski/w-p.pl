<h1>Listing commentaries</h1>

<table>
  <tr>
    <th>User</th>
    <th>News</th>
    <th>Posted</th>
    <th>Subject</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @commentaries.each do |commentary| %>
  <tr>
    <td><%= commentary.user_id %></td>
    <td><%= commentary.news_id %></td>
    <td><%= commentary.posted %></td>
    <td><%= commentary.subject %></td>
    <td><%= commentary.comment %></td>
    <td><%= link_to 'Show', commentary %></td>
    <td><%= link_to 'Edit', edit_commentary_path(commentary) %></td>
    <td><%= link_to 'Destroy', commentary, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

