<!DOCTYPE html>
<html>
  <head>
    <title>WPPl</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">	

      <% if is_english_language%>

        <% if(!(@admin_panel))%>

          <div id="menu">
            <ul>
              <li><%= link_to "Main", root_url%></li>
              <li><%= link_to "About", about_url%></li>
              <li><%= link_to "Archive", archive_url%></li>
              <li><%= link_to "Postulates", postulates_url%></li>
              <li><%= link_to "Contact", contact_url%></li>
            </ul>
          </div>
        <% end%>

        <div id ="header"></div>

      <% else %>

        <% if(!(@admin_panel))%>

          <div id="menu">
            <ul>
              <li><%= link_to "Główna", root_url%></li>
              <li><%= link_to "O nas", about_url%></li>
              <li><%= link_to "Archiwum", archive_url%></li>
              <li><%= link_to "Postulaty", postulates_url%></li>
              <li><%= link_to "Kontakt", contact_url%></li>
            </ul>
          </div>
        <% end%>

        <div id ="header"></div>

      <% end%>

      <div id="page">
        <div id="page-bgtop">
          <div id="page-bgbtm">

            <div id="content">

              <h3><%= @title%> </h3>
              <br></br>
              <%= yield %>

              <div style="clear: both;">&nbsp;</div>
            </div>

            <div id="sidebar">
              <ul>
                <% if is_english_language%>

                  <li class="p2">
                    <a><%=  link_to "Polska wersja >>", language_path%></a><p></p>
                  </li>
                  <li>
                    <% if current_user%>
                      <div id="sign_in_out_panel">
                        <%  user = User.find(current_user) %>
                        <h2>Welcome <a href="#"> <%= user.username%></a></h2>
                        <ul>
                          <li>
                            <% if user.avatar? %>
                              <%= image_tag(user.avatar, :size => "64x64") %>
                            <% else %>
                              <%= image_tag("/images/UserUnknownIcon.jpg", :size => "64x64") %>
                            <% end %>
                          </li>
                          <li>
                            <%= link_to "Logout", logout_url%>
                          </li>
                          <li>
                            <%= link_to "My account", logout_url%>
                          </li>
                        </ul>
                      </div>
                    </li>
                  <%else%>
                    <li>
                      <h2>Login </h2>
                      <ul>
                        <%= form_for(:session, :url => sessions_path) do |f| %>
                          <p class="field">
                            <%= f.label :username %>
                            <%= f.text_field :username %>
                          </p>
                          <p class="field">
                            <%= f.label :password %>
                            <%= f.password_field :password %>
                          </p>
                          <p class="actions">
                            <%= f.submit "Login" %>
                          </p>
                        <% end %>
                        <p>No account? <%= link_to "Register!", new_user_path %></p>
                      </ul>
                    </li>
                  <% end%>

                <%  else %>

                  <li class="p2">
                    <a><%=  link_to "English version >>", language_path%></a><p></p>
                  </li>
                  <li>
                    <% if current_user %>
                      <div id="sign_in_out_panel">
                        <%  user = User.find(current_user) %>
                        <h2>Witaj <a href="#"> <%= user.username%></a></h2>
                        <ul>
                          <li>
                            <% if user.avatar? %>
                              <%= image_tag(user.avatar, :size => "64x64") %>
                            <% else %>
                              <%= image_tag("/images/UserUnknownIcon.jpg", :size => "64x64") %>
                            <% end %>
                          </li>
                          <li>
                            <%= link_to "Wyloguj", logout_url%>
                          </li>
                          <li>
                            <%= link_to "Moje konto", logout_url%>
                          </li>
                        </ul>
                      </div>
                    </li>
                  <%else%>
                    <li>
                      <h2>Loguj </h2>
                      <ul>
                        <%= form_for(:session, :url => sessions_path) do |f| %>
                          <p class="field">
                            <%= f.label :username %>
                            <%= f.text_field :username %>
                          </p>
                          <p class="field">
                            <%= f.label :password %>
                            <%= f.password_field :password %>
                          </p>
                          <p class="actions">
                            <%= f.submit "Zaloguj" %>
                          </p>
                        <% end %>
                        <p>Nie masz konta? <%= link_to "Zarejestruj się!", new_user_path %></p>
                      </ul>
                    </li>
                  <% end%>

                <% end %>

              </ul>
            </div>
            <div style="clear: both;">&nbsp;</div>

          </div>
        </div>
      </div>
    </div>

    <div id="footer">
      <p>Copyright (c) 2011 wolna-polska.pl. All rights reserved. Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.</p>
    </div>

  </body>
</html>
