<!DOCTYPE html>
<html>
  <head>
    <title>WPPl</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">	

      <% if is_english_language%>

        <% if(!(@admin_panel))%>

          <div id="menu">
            <ul>
              <li><%= link_to "Main", root_url%></li>
              <li><%= link_to "About", about_url%></li>
              <li><%= link_to "Archive", archive_url%></li>
              <li><%= link_to "Postulates", postulates_url%></li>
              <li><%= link_to "Contact", contact_url%></li>
            </ul>
          </div>
        <% end%>

        <div id ="header"></div>

      <% else %>

        <% if(!(@admin_panel))%>

          <div id="menu">
            <ul>
              <li><%= link_to "Główna", root_url%></li>
              <li><%= link_to "O nas", about_url%></li>
              <li><%= link_to "Archiwum", archive_url%></li>
              <li><%= link_to "Postulaty", postulates_url%></li>
              <li><%= link_to "Kontakt", contact_url%></li>
            </ul>
          </div>
        <% end%>

        <div id ="header"></div>

      <% end%>

      <div id="page">
        <div id="page-bgtop">
          <div id="page-bgbtm">

            <div id="content">

              <h3><%= @title%> </h3>
              <br></br>
              <%= yield %>

              <div style="clear: both;">&nbsp;</div>
            </div>

            <div id="sidebar">

              <ul>

                <li>
                  <% if is_english_language%>

                    <% if current_user%>
                      <div id="sign_in_out_panel">
                        Logged as: <%= User.find(current_user).username%>
                        <%= link_to "Log out", logout_url%>
                      </div>
                    <%else%>

                      <h1>Login </h1>

                      <%= form_for(:session, :url => sessions_path) do |f| %>
                        <div class="field">
                          <%= f.label :username %><br />
                          <%= f.text_field :username %>
                        </div>
                        <div class="field">
                          <%= f.label :password %><br />
                          <%= f.password_field :password %>
                        </div>
                        <div class="actions">
                          <%= f.submit "Login" %>
                        </div>
                      <% end %>

                      <p>New user? <%= link_to "Sign up now!", new_user_path %></p>

                      <!-- <%= form_tag sessions_path do%>
                  <p>
                        <%= label_tag :username %><br/>
                        <%= text_field_tag :username, params[:username]%>
                  </p>
                  <p>
                        <%= label_tag :password%><br/>
                        <%= password_field_tag :password%>
                  </p>
                  <p class="button"><%= submit_tag%> </p>
                      <% end%> -->


                    <% end%>

                  <%  else %>


                    <% if current_user%>
                      <div id="sign_in_out_panel">
                        Zalogowany jako: <%= User.find(current_user).username%>
                        <%= link_to "Wyloguj", logout_url%>
                      </div>
                    <%else%>

                      <h1>Loguj </h1>

                      <%= form_for(:session, :url => sessions_path) do |f| %>
                        <div class="field">
                          <%= f.label :username %><br />
                          <%= f.text_field :username %>
                        </div>
                        <div class="field">
                          <%= f.label :password %><br />
                          <%= f.password_field :password %>
                        </div>
                        <div class="actions">
                          <%= f.submit "Zaloguj" %>
                        </div>
                      <% end %>

                      <p>Nie masz konta? <%= link_to "Zarejestruj się!", new_user_path %></p>

                      <!-- <%= form_tag sessions_path do%>
                    <p>
                        <%= label_tag :username %><br/>
                        <%= text_field_tag :username, params[:username]%>
                    </p>
                    <p>
                        <%= label_tag :password%><br/>
                        <%= password_field_tag :password%>
                    </p>
                    <p class="button"><%= submit_tag%> </p>
                      <% end%> -->


                    <% end%>


                  <% end %>
                </li>

                <li>
                  <%flash.each do |name, msg| %>
                    <%= content_tag :div, msg, :id => "flash#{name}"%>
                  <% end%>
                </li>

              </ul>

            </div>
            <div style="clear: both;">&nbsp;</div>

          </div>
        </div>
      </div>
    </div>

    <div id="footer">
      <p>Copyright (c) 2011 wolna-polska.pl. All rights reserved. Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.</p>
    </div>

  </body>
</html>
