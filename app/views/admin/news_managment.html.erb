<h3> <%= link_to 'New News', new_news_path %> </h3>
<br/>
<table>
  <tr>
    <th>Posted</th>
    <th>Subject </th>
    <th>Content </th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.posted %></td>
    <td><%= news.subject %></td>
    <td><%= news.news %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

